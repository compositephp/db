{
    "name": "compositephp/db",
    "description": "PHP 8.1+ ORM and Table Gateway",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Composite PHP",
            "email": "compositephp@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "psr/simple-cache":  "1 - 3",
        "compositephp/entity": "^0.1.4",
        "doctrine/dbal": "^3.5"
    },
    "require-dev": {
        "kodus/file-cache": "^2.0",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Composite\\DB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Composite\\DB\\Tests\\": "tests/"
        }
    }
}
